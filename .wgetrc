# use server-provided last modification date
timestamping = on

# do not go up in the directory structure when downloading recursively
no_parent = on

# wait 60 seconds before timing out
timeout = 60

# set retry time to 3 when connection fails, also retry connection if the connection is refused
tries = 3
retry_connrefused = on

# add HTML file extenions for "application/html" files that don't have extensions, same for CSS files
adjust_extension = on

# ignore "robots.txt" 
robots = off
